<!DOCTYPE html>
<html lang="en">
  <!-- THE HEAD TAG PARTIAL -->
  <%- include("partials/head") %>

  <body>
    <!-- THE HEADER TAG PARTIAL -->
    <%- include("partials/authheader") %>
    <main>
        <h1 class="title is-1">Booked Appointments</h1>
        <div id="apmts">  
        <% for (apmt of apmts) { %>
            <div class="card" id="appcards">

              <h2 class="apmt-card">
                <a href="/appointments/<%= apmt._id%>"><%= apmt.type %></a>
                <br><br><%= apmt.date %>
              </h2>
            </div>
          <% } %>
        </div>
        <br><br>
        <a href="/new" class="newbtn"><button style="background-color: black; color: white;border: solid white 3px; border-radius: 5px; font-weight: 600; padding: 10px;">Make An Appointment</button></a>
    </main>
    <!-- THE HEAD TAG PARTIAL -->
    <%- include("partials/footer") %>
  </body>
</html>